{
  "name": "qcode-chat",
  "displayName": "QCode Chat",
  "description": "AI coding assistant with OpenRouter integration for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ai",
    "chat",
    "coding",
    "assistant",
    "openrouter",
    "copilot"
  ],
  "publisher": "your-github-username",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#2d2d2d",
    "theme": "dark"
  },
  "activationEvents": [
    "onView:qcodeChatView",
    "onCommand:qcode-chat.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qcode-chat.openChat",
        "title": "Open QCode Chat"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qcodeChat",
          "title": "QCode Chat",
          "icon": "./media/icon.png"
        }
      ]
    },
    "views": {
      "qcodeChat": [
        {
          "id": "qcodeChatView",
          "name": "QCode Chat",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "QCode Chat",
      "properties": {
        "qcode-chat.openrouterApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenRouter API key"
        },
        "qcode-chat.selectedModel": {
          "type": "string",
          "default": "qwen/qwen3-coder:free",
          "description": "Selected AI model for chat"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
